class Solution:
    def minCost(self, c: str, t: list[int]) -> int:
        res = i = 0
        while i < len(t):
            j = i
            s = m = 0
            while j < len(t) and c[j] == c[i]:
                s += t[j]
                m = max(m, t[j])
                j += 1
            res += s - m
            i = j
        return res
