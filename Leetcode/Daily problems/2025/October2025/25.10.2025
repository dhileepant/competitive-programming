class Solution:
    def totalMoney(self, n: int) -> int:
        ans = 0 
        i = 0
        for j in range(0,n,7):
            if j+7 <= n:
                a = i + 7
                m = ((a*(a+1)) // 2) - (i*(i+1)//2)
                i += 1
                ans += m
        if n%7 != 0:
            for j in range(n%7):
                ans += i+1
                i += 1
        return ans
